<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <!--<View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/light_gray"
        android:visibility="invisible"
        />-->
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/light_gray"
        android:visibility="invisible"
        android:id="@+id/list_item_all_images_selection_background"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@drawable/ic_menu_camera"
        android:scaleType="centerCrop"
        android:id="@+id/list_item_all_images_image"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/list_item_all_images_selected"
        android:visibility="invisible"
        tools:visibility="visible"
        tools:src="@drawable/ic_selection_done"
        />
</FrameLayout>